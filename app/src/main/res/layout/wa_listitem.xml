<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:textAlignment="center">


    <view
        android:id="@+id/view_dp"
        class="com.mikhaellopez.circularimageview.CircularImageView"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/txt_nm"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="16dp"
        android:text="Test Group"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_msg"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:text="+918390595359 hi hello"
        app:layout_constraintStart_toEndOf="@+id/view_dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_nm" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="16dp"
        android:text="04:30am"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/txt_nm"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toEndOf="@+id/txt_msg"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_volume_off_24" />

    <TextView
        android:id="@+id/txt_count"
        android:layout_width="38dp"
        android:layout_height="19dp"
        android:background="@drawable/wa_round_pp"
        android:gravity="center"
        android:text="123"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_mute"
        app:layout_constraintTop_toTopOf="@+id/img_mute" />


</androidx.constraintlayout.widget.ConstraintLayout>